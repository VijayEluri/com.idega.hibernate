<?xml version="1.0" encoding="UTF-8"?>

<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:jee="http://www.springframework.org/schema/jee"

	xsi:schemaLocation="
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/tx 
            http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
            http://www.springframework.org/schema/context 
            http://www.springframework.org/schema/context/spring-context-3.0.xsd
            http://www.springframework.org/schema/aop 
            http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
            http://www.springframework.org/schema/jee 
            http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">
            
	<tx:annotation-driven />

	<!-- Datasource -->
	
	<!-- Getting data source via JNDI, should be configured on ROOT.xml or server.xml-->
	<jee:jndi-lookup 
		id="idegaDataSource" 
		jndi-name="java:comp/env/jdbc/DefaultDS"/>
	
	<!-- JPA -->
	
	<!-- Resolver for searching ORM files in Idega packages -->
	<bean 	
		id="idegaORMPatternResolver" 
		class="com.idega.core.persistence.impl.OrmPathPatternMatchingResolver">
		<property name="resourceResolver">
			<bean 
				class="org.springframework.core.io.support.PathMatchingResourcePatternResolver"/>
		</property> 
	</bean>
	
	<!-- entity manager for "JPA" implementation -->
	<bean 	
		id="idegaEntityManagerFactory" 
		class="org.springframework.orm.jpa.IdegaLocalContainerEntityManagerFactoryBean">
		<property 	
			name="dataSource" ref="idegaDataSource" />
		<property 	
			name="persistenceUnitName" 
			value="idegaPersistanceUnit" />
					
		<property 	
			name="persistenceUnitPostProcessors" 
			ref="idegaORMPatternResolver"/>
	</bean>
 
 	<!-- Transaction manager for "JPA" implementation -->
	<bean 	id="transactionManager" 
			class="org.springframework.orm.jpa.JpaTransactionManager">
		<property 	name="entityManagerFactory" 
					ref="idegaEntityManagerFactory" />
	</bean>

	<!-- Hibernate -->

	<!-- Session Factory for "Hibernate" implementation -->
	<bean 
		id="idegaSessionFactory" 
		factory-bean="idegaEntityManagerFactory" 
		factory-method="getSessionFactory" />

	<!-- Transaction manager for "Hibernate" implementation. -->
	<bean 
		id="idegaHibernateTransactionManager"
		class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property
		 	name="sessionFactory" 
			ref="idegaSessionFactory" />
	</bean>
</beans>