<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">

<!-- type="RESOURCE_LOCAL" -->
    <persistence-unit name="idegaTestPersistanceUnit">

        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        
        <mapping-file>classpath*:com/idega/**/orm*.xml</mapping-file>
        <mapping-file>classpath*:is/idega/**/orm*.xml</mapping-file>
       	<mapping-file>classpath*:is/illuminati/**/orm*.xml</mapping-file>
        <mapping-file>classpath*:se/fujitsu/**/orm*.xml</mapping-file>
 	    <mapping-file>classpath*:org/jbpm/**/*.hbm.xml</mapping-file>
        <mapping-file>classpath*:com/idega/**/*.hbm.xml</mapping-file>
        <mapping-file>classpath*:se/fujitsu/**/*.hbm.xml</mapping-file>
        <mapping-file>classpath*:com/idega/**/**/**/*.hbm.xml</mapping-file>
        <mapping-file>classpath*:com/idega/**/**/*.hbm.xml</mapping-file>
         
        <exclude-unlisted-classes/>
        
        <validation-mode>AUTO</validation-mode>
    </persistence-unit>
    
</persistence>